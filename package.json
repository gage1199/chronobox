{
  "name": "chronobox",
  "version": "1.0.0",
  "description": "Chronobox website",
  "scripts": {
    "build": "postcss css/main.css -o dist/styles.min.css && webpack --mode production",
    "watch": "postcss css/main.css -o dist/styles.min.css --watch",
    "build:dev": "postcss css/main.css -o dist/styles.css --no-map && webpack --mode development",
    "build:js": "webpack --mode production",
    "watch:js": "webpack --watch --mode development"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "autoprefixer": "^10.4.18",
    "babel-loader": "^10.0.0",
    "cssnano": "^6.0.5",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.1",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
